{
  "name": "@opengovsg/ts-template",
  "version": "1.0.0",
  "description": "A template for most TypeScript projects in OGP",
  "main": "server/build/index.js",
  "scripts": {
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "lint-staged": "lint-staged",
    "test": "echo 'No tests implemented'",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only --inspect -- src/index.ts",
    "start": "node build/index.js"
  },
  "author": "Open Government Products, GovTech Singapore (https://open.gov.sg)",
  "license": "MIT",
  "devDependencies": {
    "@types/convict": "^5.2.1",
    "@types/express": "^4.17.9",
    "@typescript-eslint/parser": "^4.8.1",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "lint-staged": "^10.5.1",
    "prettier": "^2.2.0",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.5"
  },
  "lint-staged": {
    "**/*.(js|jsx|ts|tsx)": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "convict": "^6.0.0",
    "express": "^4.17.1"
  }
}
