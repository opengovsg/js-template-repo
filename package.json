{
  "name": "@opengovsg/js-template-repo",
  "version": "1.0.0",
  "description": "A template for most JavaScript projects in OGP",
  "main": "index.js",
  "scripts": {
    "test:client": "npm run --prefix client test",
    "test": "npm run test:client",
    "cz": "git-cz",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "dev": "docker-compose up --build",
    "dev:client": "npm run --prefix client start",
    "dev:server": "nodemon --exec 'node --inspect -r ts-node/register' server/src/index.ts",
    "dev:start": "env-cmd concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "build:server": "tsc",
    "build:client": "npm run --prefix client build",
    "start": "node build/server/index.js"
  },
  "author": "Open Government Products, GovTech Singapore (https://open.gov.sg)",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/travis-cli": "^8.3.5",
    "@types/express": "^4.17.6",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "commitizen": "^4.1.2",
    "concurrently": "^5.2.0",
    "cz-conventional-changelog": "^3.2.0",
    "env-cmd": "^10.1.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.9",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "commitlint --from origin/develop --to HEAD --verbose"
    }
  },
  "lint-staged": {
    "**/*.(js|jsx|ts|tsx)": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "express": "^4.17.1"
  }
}
